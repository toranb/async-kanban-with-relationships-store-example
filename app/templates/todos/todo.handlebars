<section class="cards">
  <div>
    <div class="cards">
      <div class="details">
        <span class="card_title">
          <h4>Details</h4>
          <hr />
          {{#if todos.model.isLoaded}}
            {{#if controller.content}}
              <div class="form-group">
                <label for="project">Project</label>
                {{input class="form-control project" id="project" name="project" value=model.project}}
              </div>
            {{else}}
              <div class="no-detail-data-found"><h2>No detail model data</h2></div>
            {{/if}}
          {{else}}
              <div class="loading-details-gif"><h2>Loading details...</h2></div>
          {{/if}}
        </span>
      </div>
    </div>
  </div>

  <div class="notes"><h3>Notes</h3>
  {{#if related.isLoaded}}
    {{#if related}}
      {{#each note in related}}
        <span class="note">{{note.title}}</span>
      {{/each}}
    {{else}}
      <div class="no-notes-found"><h2>No notes found</h2></div>
    {{/if}}
  {{else}}
      <div class="loading-notes-gif"><h2>Loading notes...</h2></div>
  {{/if}}
  </div>

</section>
